{
  "name": "fintech-wallet-backend",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "dev2": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev": "nodemon --ext ts,js,ejs,json,html,yaml --watch . --watch views --watch public --watch './**/*.ts' --exec ts-node src/app.ts",
    "build": "tsc",
    "predeploy": "rm -rf src/dist && pnpm build && cp package.json src/dist/ && cd src/dist && mkdir public && cd public && mkdir uploads && cd ../.. && cp -r  public/uploads dist/public/ && git add . && git commit -m \"whatsapp webhook added\"",
    "deploy": "git push -u origin main",
    "start": "node dist/index.js",
    "test": "jest --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.10.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.5",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.6",
    "@types/sequelize": "^6.12.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/twilio": "^3.19.3",
    "@types/yamljs": "^0.2.34",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
